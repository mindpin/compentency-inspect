    = csrf_meta_tags

  %body
    :ruby
      outline_data = YAML.load_file File.join(Rails.root, 'csm', 'outline', 'outline-learner.yaml')

    = react_component 'OutlinePage', outline_data: outline_data, path: 'learner'
